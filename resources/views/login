document.addEventListener("DOMContentLoaded", function () {
    document.querySelector("form").addEventListener("submit", function (event) {
        event.preventDefault(); // Impede o envio do formul√°rio antes da valida√ß√£o

        let cpf = document.getElementById("cpf").value.trim();
        let senha = document.getElementById("senha").value;

        if (cpf === "" || senha === "") {
            alert("Por favor, preencha todos os campos.");
            return;
        }

        if (!validarCPF(cpf)) {
            alert("CPF inv√°lido. Insira um CPF v√°lido.");
            return;
        }

        alert("Login realizado com sucesso!");
        this.submit(); // Submete o formul√°rio ap√≥s a valida√ß√£o
    });
});

// Fun√ß√£o para validar CPF
function validarCPF(cpf) {
    cpf = cpf.replace(/[^\d]+/g, ''); // Remove caracteres n√£o num√©ricos
    if (cpf.length !== 11 || /^(\d)\1{10}$/.test(cpf)) return false;

    let soma = 0, resto;
    for (let i = 1; i <= 9; i++) soma += parseInt(cpf[i - 1]) * (11 - i);
    resto = (soma * 10) % 11;
    if (resto === 10 || resto === 11) resto = 0;
    if (resto !== parseInt(cpf[9])) return false;

    soma = 0;
    for (let i = 1; i <= 10; i++) soma += parseInt(cpf[i - 1]) * (12 - i);
    resto = (soma * 10) % 11;
    if (resto === 10 || resto === 11) resto = 0;
    return resto === parseInt(cpf[10]);
}

// Fun√ß√£o para exibir ou ocultar senha
function togglePassword() {
    let senhaInput = document.getElementById("senha");
    if (senhaInput.type === "password") {
        senhaInput.type = "text";
    } else {
        senhaInput.type = "password";
    }
}

// Fun√ß√£o para recupera√ß√£o de senha
function recuperarSenha() {
    let cpf = document.getElementById("cpf").value.trim();
    
    if (cpf === "") {
        alert("Digite seu CPF para recuperar a senha.");
        return;
    }

    if (!validarCPF(cpf)) {
        alert("CPF inv√°lido. Insira um CPF v√°lido.");
        return;
    }

    alert("Se o CPF estiver cadastrado, voc√™ ser√° redirecionado para recupera√ß√£o de senha.");
    window.location.href = "password_recovery.html"; // Alterar para a rota correta depois
}